<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@color/gray"-->
<!--                    android:hint="Masukan data" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <RadioGroup
                android:id="@+id/input_exercise_induced_angina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="YES" />
                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="NO" />




            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ST Depression"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/input_st_depression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@color/gray"
                    android:hint="Masukan data" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ST Slope"
                android:textColor="@color/black"
                android:textSize="18sp" />

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="10dp">-->

<!--                <EditText-->
<!--                    android:id="@+id/input_st_slope"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:inputType="text"-->
<!--                    android:background="@color/gray"-->
<!--                    android:hint="Masukan data" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner_stslope"
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="35dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down">

                </ImageView>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Major Vessels"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/input_major_vessels"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:hint="Masukan data" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thalassemia"
                android:textColor="@color/black"
                android:textSize="18sp" />

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="10dp">-->

<!--                <EditText-->
<!--                    android:id="@+id/input_thalassemia"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:inputType="text"-->
<!--                    android:background="@color/gray"-->
<!--                    android:hint="Masukan data" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner_thalassemia"
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="35dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down">

                </ImageView>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pemeriksaan"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/input_cek_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/gray"
                    android:drawableLeft="@drawable/ic_date"
                    android:drawablePadding="2dip"
                    android:gravity="center"
                    android:paddingLeft="30dip"
                    android:paddingRight="26dip"
                    android:singleLine="true"
                    android:text="Masukan tanggal lahir" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/btn_cek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/red_app"
        app:hideOnScroll="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:ignore="BottomAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CEK PASIEN"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>
</androidx.constraintlayout.widget.ConstraintLayout>